<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<div class='user-form'>

  <h1>🎹 Music Snippets 🎸</h1>
  <h2>Log In:</h2>

  <%= form_tag do %>
  <%= label_tag :username %>
  <%= text_field_tag :username %><br/>
  <%= label_tag :password %>
  <%= password_field_tag :password %><br/>
  <%= submit_tag "Log In" %>
  <% end %>

</div>
